<% layout('layout') %>

<h1 class="text-2xl font-bold mb-6">Liste des membres</h1>

<form action="/membres/add" method="POST" class="mb-6">
  <input type="text" name="nom" placeholder="Nom" class="border p-2 mr-2" required>
  <input type="text" name="prenom" placeholder="Prénom" class="border p-2 mr-2" required>
  <input type="text" name="telephone" placeholder="Téléphone" class="border p-2 mr-2">
  <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Ajouter</button>
</form>

<table class="w-full border">
  <thead>
    <tr class="bg-gray-200">
      <th class="p-2 border">ID</th>
      <th class="p-2 border">Nom</th>
      <th class="p-2 border">Prénom</th>
      <th class="p-2 border">Téléphone</th>
      <th class="p-2 border">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% membres.forEach(m => { %>
      <tr>
        <td class="border p-2"><%= m.id %></td>
        <td class="border p-2"><%= m.nom %></td>
        <td class="border p-2"><%= m.prenom %></td>
        <td class="border p-2"><%= m.telephone %></td>
        <td class="border p-2">
          <a href="/membres/delete/<%= m.id %>" class="text-red-500">Supprimer</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
